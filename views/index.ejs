<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forex Trading Platform</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="./css/output.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
</head>

<body class="bg-gray-100">

    <div class="flex h-screen">
        <!-- Sidebar (Fixed) -->
        <header class="w-1/5 bg-gray-800 shadow-lg p-6 flex flex-col items-start fixed h-screen">
            <h1 class="font-bold text-2xl text-gray-100">Forex Trading</h1>
            <nav class="mt-10 w-full">
                <ul class="space-y-4 font-bold text-gray-100">
                    <li><a href="/login" class="hover:text-blue-400 flex items-center"><i class="ri-user-line mr-2"></i>Login</a></li>
                </ul>
            </nav>
        </header>

        <!-- Main Content -->
        <main class="w-4/5 flex px-6 space-x-6 bg-gray-950 ml-[20%]">
            <!-- Left Column (Scrollable Content) -->
            <div class="flex flex-col w-2/3 space-y-6 overflow-y-auto h-screen py-6 scrollbar-hide">
                <!-- Market Overview -->
                <section id="market-overview" class="p-6 bg-gray-800 shadow-lg rounded-lg">
                    <h2 class="text-3xl font-bold text-gray-100">Market Overview</h2>
                    <p class="py-2 text-gray-200">Live forex rates and market trends.</p>
                    <div id="forex-chart" class="h-40 bg-gray-200 rounded-lg"></div>
                </section>

                <!-- Recent Transactions -->
                <section id="recent-transactions" class="bg-gray-800 p-6 shadow-lg rounded-lg">
                    <h2 class="text-3xl font-bold text-gray-100">Recent Transactions</h2>
                    <ul class="mt-4 space-y-3 text-gray-100">
                        <li class="flex justify-between border-b pb-2">
                            <span>Buy EUR/USD</span> <span class="font-bold text-green-500">+$500</span>
                        </li>
                        <li class="flex justify-between border-b pb-2">
                            <span>Sell GBP/USD</span> <span class="font-bold text-red-500">-$250</span>
                        </li>
                        <li class="flex justify-between">
                            <span>Buy USD/JPY</span> <span class="font-bold text-green-500">+$300</span>
                        </li>
                        <li class="flex justify-between">
                            <span>Buy USD/JPY</span> <span class="font-bold text-green-500">+$300</span>
                        </li>
                        <li class="flex justify-between">
                            <span>Buy USD/JPY</span> <span class="font-bold text-green-500">+$300</span>
                        </li>
                        <li class="flex justify-between">
                            <span>Buy USD/JPY</span> <span class="font-bold text-green-500">+$300</span>
                        </li>
                        <li class="flex justify-between">
                            <span>Buy USD/JPY</span> <span class="font-bold text-green-500">+$300</span>
                        </li>

                        <li class="flex justify-between">
                            <span>Buy USD/JPY</span> <span class="font-bold text-green-500">+$300</span>
                        </li>

                        <li class="flex justify-between">
                            <span>Buy USD/JPY</span> <span class="font-bold text-green-500">+$300</span>
                        </li>
                    </ul>
                </section>
            </div>

            <!-- Right Column (Fixed Trading Panel) -->
            <section id="trading-panel" class="w-1/3 bg-gray-800 p-6 shadow-lg rounded-lg sticky top-6 h-fit">
                <h2 class="text-3xl font-bold text-gray-100 mb-4">Make a Trade</h2>
                <form id="trade-form" class="space-y-4">
                    <!-- Currency Pair -->
                    <div>
                        <label for="currency-pair" class="block text-sm font-medium text-gray-100">Currency Pair</label>
                        <select id="currency-pair" class="mt-1 block w-full p-2 border bg-white border-gray-300 rounded-lg focus:ring-amber-500 focus:border-amber-500">
                            <option value="EUR/USD">EUR/USD</option>
                            <option value="GBP/USD">GBP/USD</option>
                            <option value="USD/JPY">USD/JPY</option>
                        </select>
                    </div>

                    <!-- Trade Type -->
                    <div>
                        <label for="trade-type" class="block text-sm font-medium text-gray-100">Trade Type</label>
                        <select id="trade-type" class="mt-1 block w-full p-2 border bg-white border-gray-300 rounded-lg focus:ring-amber-500 focus:border-amber-500">
                            <option value="buy">Buy</option>
                            <option value="sell">Sell</option>
                        </select>
                    </div>

                    <!-- Trade Amount -->
                    <div>
                        <label for="trade-amount" class="block text-sm font-medium  text-gray-100">Amount</label>
                        <input type="number" id="trade-amount" placeholder="Enter amount"
                            class="mt-1 block w-full p-2 border bg-white border-gray-300 rounded-lg focus:ring-amber-500 focus:border-amber-500">
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="bg-amber-500 hover:bg-amber-600 text-white w-full font-bold py-2 px-4 rounded-lg transition duration-300">
                        Execute Trade
                    </button>
                </form>
            </section>
        </main>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"
        integrity="sha512-7eHRwcbYkK4d9g/6tD/mhkf++eoTHwpNM9woBxtPUBWm67zeAfFC+HrdoE2GanKeocly/VxeLvIqwvCdk7qScg=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"
        integrity="sha512-onMTRKJBKz8M1TnqqDuGBlowlH0ohFzMXYRNebz+yOcc5TQr/zAKsthzhuv0hiyUKEiQEQXEynnXCvNTOk50dg=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="script.js"></script>

</body>
</html>
